{
  "name": "deancomplete",
  "displayName": "deancomplete",
  "description": "Code assist for real this time.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:cpp",
    "onLanguage:c"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "deancomplete.goToDefinition",
        "title": "DeanComplete: Go to Definition",
        "category": "DeanComplete"
      },
      {
        "command": "deancomplete.buildIndex",
        "title": "DeanComplete: Build Definition Index",
        "category": "DeanComplete"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "deancomplete.goToDefinition",
          "when": "editorLangId == cpp || editorLangId == c",
          "group": "navigation@0"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "DeanComplete",
      "properties": {
        "deancomplete.indexer.path": {
          "type": "string",
          "default": "",
          "description": "Absolute path to the external LibTooling definition indexer executable."
        },
        "deancomplete.index.file": {
          "type": "string",
          "default": ".deancomplete/index.jsonl",
          "description": "Workspace-relative path to the definitions index file (JSON Lines)."
        },
        "deancomplete.compileCommandsDir": {
          "type": "string",
          "default": "",
          "description": "Directory containing compile_commands.json. If empty, the workspace root is used."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  }
}
